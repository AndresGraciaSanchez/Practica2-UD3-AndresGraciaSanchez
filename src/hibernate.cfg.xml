<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.url">jdbc:mysql://localhost:3306/tienda_software_open_source</property>
        <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <mapping class="com.andresgracia.practica3.base.Categoria"/>
        <mapping class="com.andresgracia.practica3.base.Cliente"/>
        <mapping class="com.andresgracia.practica3.base.Comentario"/>
        <mapping class="com.andresgracia.practica3.base.Desarrollador"/>
        <mapping class="com.andresgracia.practica3.base.Producto"/>
        <mapping class="com.andresgracia.practica3.base.ProductoDesarrollador"/>
        <!-- <property name="connection.username"/> -->
        <!-- <property name="connection.password"/> -->

        <!-- DB schema will be updated if needed -->
        <!-- <property name="hibernate.hbm2ddl.auto">update</property> -->
    </session-factory>
</hibernate-configuration>